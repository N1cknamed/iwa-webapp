{% extends 'contract_beheer/index.html.twig' %}

{% block title %}Abonnementen{% endblock %}

{% block header %}
    {% include 'header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="col-md-8">
        <h2>{{ name }}</h2>
        <div class='card'>
            <div class='card-body'>
                <table class="table text-center">
                    <thread>
                        <tr>
                            <th>Startdatum</th>
                            <th>Einddatum</th>
                            <th>Station</th>
                            <th>Acties</th>
                        </tr>
                    </thread>
                    <tbody>
                        {% for subscription in subscriptions %}
                            <tr>
                                <td>{{ subscription.datestart|date('Y-m-d') }}</td>
                                <td>{{ subscription.dateend|date('Y-m-d') }}</td>
                                <td>{{ subscription.station }}</td>
                                <td>
                                    <a href="{{ path('app_edit_subscription', {'id': subscription.id}) }}" class="btn btn-outline-primary">
                                        <i class='bi bi-pencil-fill'></i>
                                    </a>
                                    <a href='{{ path('app_remove_subscription', {'id': subscription.id}) }}' class='btn btn-outline-danger' onclick='return confirm('Are you sure you want to remove the following subscription?');'>
                                        <i class='bi bi-trash-fill'></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">Geen abonnementen gevonden</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            <a href="{{ path('app_add_subscription_to_name', {'name': name}) }}" class="btn btn-outline-primary">Voeg nieuw abonnement toe</a>
            </div>
        </div>
    </div>
{% endblock %}
