{% extends 'base.html.twig' %}

{% block title %}Data Acquisition{% endblock %}

{% block header %}
    {% include 'header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Stations</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Elevation</th>
            </tr>
            </thead>
            <tbody>
            {% for station in stations %}
                <tr>
                    <td>{{ station.name }}</td>
                    <td>{{ station.longitude }}</td>
                    <td>{{ station.latitude }}</td>
                    <td>{{ station.elevation }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No stations found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}