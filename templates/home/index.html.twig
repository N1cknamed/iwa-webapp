{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block header %}
    {% include 'header.html.twig' %}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; text-align: center; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .image-container { margin-bottom: 50px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Storingen</h3>
                </div>
                <div class="card-body">
                    {% if malfunctions is empty %}
                        <p>Geen actieve storingen.</p>
                    {% else %}
                        <table>
                            <thead>
                            <tr>
                                <th>Station</th>
                                <th>Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for malfunction in malfunctions %}
                                <tr>
                                    <td>{{ malfunction.getStation() }}</td>
                                    <td>{{ malfunction.getDATE()|date('Y-m-d H:i:s') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
