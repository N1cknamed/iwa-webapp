{% extends 'base.html.twig' %}

{% block title %}JSON Data{% endblock %}


//style tijdelijk overgenomen van andere twig files
{% block body %}
<style>
    .data-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .data-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .data-list { list-style-type: none; padding: 0; }
    .data-item { margin-bottom: 10px; border: 1px solid #ccc; padding: 10px; }
    .data-item h2 { margin-top: 0; }
    .data-item p { margin-bottom: 0; }
</style>

<div class="data-wrapper">
    <h1>JSON Data </h1>

    <div id="data-container">               // dit gedeelte is momenteel een placeholder en moet 
        {% block content %}                 // nog aangepast worden naar onze structuur
            {% for item in data %}
                <div class="data-item">
                    <h2>{{ item.title }}</h2>
                    <p>{{ item.description }}</p>                       
                    <p><strong>Author:</strong> {{ item.author }}</p>
                    <p><strong>Date:</strong> {{ item.date }}</p>
                </div>
            {% endfor %}
        {% endblock %}
    </div>
</div>
{% endblock %}
