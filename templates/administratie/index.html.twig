{%  extends 'base.html.twig' %}

{% block title %}Administratie{% endblock %}

{% block header %}
    {% include 'header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('app_register') }}" class="btn btn-outline-primary">Registreer nieuw account</a>

        <h2>Bestaande accounts</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Email</th>
                <th>Accounttype</th>
                <th>Opties</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {%  if role != 'ROLE_USER' %}
                                {{ role|replace({'ROLE_ADMIN': 'Administrator'})|replace({'ROLE_DATA': 'Data Acquisition'})|replace({'ROLE_CONTRACT': 'Contractbeheerder'}) }}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('app_remove_user', {'id': user.id}) }}" class="btn btn-outline-danger" onclick="return confirm('Weet je zeker dat je het volgende account wil verwijderen: {{ user.email }}');">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Geen gebruikers gevonden</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}